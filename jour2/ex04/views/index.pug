html
    head
        title= title
        link( rel="stylesheet" href="https://unpkg.com/purecss@0.6.2/build/pure-min.css")
        meta( name="viewport" content="width=device-width, initial-scale=1")
        style
            | img, video {display: block }
    body
        each post in posts
            if post.endsWith(".gif")
                img(src=post)
            else if post.endsWith(".gifv")
                video(autoplay="")
                    source(src=post.replace(".gifv", ".mp4"), type="video/mp4")